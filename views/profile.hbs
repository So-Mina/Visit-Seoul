<div class="icons">
  <div class="fav">
    <a href="/favorites"><button>
  <i class="fa-solid fa-star"></i> Favorites</button></a>
  </div>
  <div class="visit">
    <a href="/to-visit"><button>
  <i class="fa-solid fa-bookmark"></i> To Visit</button></a>

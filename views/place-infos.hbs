<h1>{{place.name}}</h1>

  <i class="fa-regular fa-star" onclick="this.classList.toggle('fa-solid')"></i>

  <i class="fa-regular fa-bookmark" onclick="this.classList.toggle('fa-solid')"></i>

<div class="infos">
   <img id="placeInfosImg" src={{place.photo}} alt="{{place.name}}">
    <p>{{place.description}}</p> 
</div>

<div id="map"></div>

{{#if isAdmin}}
<form action="/places/{{place._id}}/delete" method="post">
  <input type="submit" value="Delete" />
</form>
<a href="/places/{{place._id}}/edit">Edit</a>
{{/if}}




